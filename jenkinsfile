pipeline {
   agent any

   stages {
      stage('Code check') {
         steps {
            bat "mvn sonar:sonar"
         }
      }
      
      stage('Clean') {
         steps {
            bat "mvn clean"
         }
      }
      
     stage('Test') {
         steps {
            bat "mvn test"
         }
      }
      
      stage('Package') {
         steps {
            bat "mvn package"
         }
             post {
            // If Maven was able to run the tests, even if some of the test
            // failed, record the test results and archive the jar file.
            input("Do you want to archive the results?")
            success {
               junit '**/target/surefire-reports/TEST-*.xml'
            }
         }
      }
   }
}