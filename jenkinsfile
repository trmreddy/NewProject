pipeline {
   agent any

   stages {
      stage('Code check') {
         steps {
            bat "mvn sonar:sonar"
         }
      }
      
      stage('Clean') {
         steps {
            bat "mvn clean"
         }
      }
      
     stage('Test') {
         steps {
            bat "mvn test"
         }
      }
      
      stage('Package') {
         steps {
		   input("Do you want to package and archive the results?")
		   bat "mvn package"
           junit '**/target/surefire-reports/TEST-*.xml'
         }  
      }
   }
}